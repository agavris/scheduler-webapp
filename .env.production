# Production Environment Configuration
# SECURITY: Generate a secure key: python -c 'import secrets; print(secrets.token_urlsafe(50))'
DJANGO_SECRET_KEY=your-secure-secret-key-here

# Django settings
DJANGO_SETTINGS_MODULE=scheduler_project.settings_prod
DEBUG=False
ALLOWED_HOSTS=yourdomainhere.com,www.yourdomainhere.com

# Security settings
ENABLE_SSL=True
DB_USE_SSL=True
CSRF_TRUSTED_ORIGINS=https://yourdomainhere.com,https://www.yourdomainhere.com
CORS_ALLOWED_ORIGINS=https://yourdomainhere.com,https://www.yourdomainhere.com

# Database settings
DB_NAME=scheduler
DB_USER=scheduler_user
DB_PASSWORD=strong-database-password
DB_HOST=db
DB_PORT=5432

# Redis settings
REDIS_URL=redis://redis:6379/1
REDIS_PASSWORD=strong-redis-password

# Email settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomainhere.com

# Admin user settings
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=secure-admin-password
DJANGO_SUPERUSER_EMAIL=admin@yourdomainhere.com

# Docker resource limits
WEB_MEMORY=1G
WEB_MEMORY_RESERVATION=512M
DB_MEMORY=1G
REDIS_MEMORY=512M
NGINX_MEMORY=256M

# Deployment settings
APP_PORT=80
HTTPS_PORT=443
SERVER_NAME=yourdomainhere.com

# Backup settings
BACKUP_RETENTION_DAYS=7
BACKUP_FREQUENCY=daily
